@page "/"
@page "/home-loan-repayment-calculator"
@layout MainLayout
@inherits HomeLoanRepaymentCal.Pages.HomeLoanRepaymentCalculatorComponent

@using Radzen
@using Radzen.Blazor
<RadzenContent Container="main">
  <ChildContent>
    <RadzenHeading Size="H1" Text="Home Loan Repayment Calculator">
    </RadzenHeading>
    <RadzenLabel style="display: block" Text="Loan Amount ($)">
    </RadzenLabel>
    <RadzenTextBox Placeholder="50000" style="display: block" @bind-Value="@loanAmount" Name="LoanAmountInputTxt">
    </RadzenTextBox>
    <RadzenLabel style="display: block" Text="Interest rate (%)">
    </RadzenLabel>
    <RadzenTextBox Placeholder="2.69" style="display: block" @bind-Value="@interestRate" Name="InterestRateInputTxt">
    </RadzenTextBox>
    <RadzenLabel style="display: block" Text="Total loan term (years)">
    </RadzenLabel>
    <RadzenTextBox Placeholder="30" style="display: block" @bind-Value="@totalLoanTerm" Name="TotalLoanTermInputTxt">
    </RadzenTextBox>
    <RadzenButton style="display: block; margin-top: 10px" Text="Calculate" Click="@CalculateBtnClick">
    </RadzenButton>
    <RadzenLabel style="display: block; margin-top: 10px" Text="Your estimated payments ($)">
    </RadzenLabel>
    <RadzenTextBox ReadOnly="true" style="display: block" @bind-Value="@totalPayment" Name="TotalPaymentRdOnly">
    </RadzenTextBox>
  </ChildContent>
</RadzenContent>
